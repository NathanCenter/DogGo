@model DogGo.Models.ViewModels.WalkerFormModel


@{
    ViewData["Title"] = "Details";
}

<h1>Walker Profile</h1>

<div>
    <h4>Walker</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Walker.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Walker.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.Neighborhood)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Walker.Neighborhood.Name)
        </dd>
        <dt class = "col-sm-2">
           <img class="bg-info" src="@Model.Walker.ImageUrl" alt="avatar" />
        </dt>
        <dd class = "col-sm-10">
           <img class="bg-info" src="@Model.Walker.ImageUrl" alt="avatar" />
        </dd>
       <dt class = "col-sm-2">
           <h2>Recent Walks</h2>
             
            @foreach (Walks walk in Model.Walks)
            {
                 <li class="list-group-item disabled" aria-disabled="true">
                <h6>Date: @walk.Date </h6>   <h6>  Dog:@walk.Dog.Name </h6> <h6> Duration: @walk.Duration</h6>
                </li>
            }

        </dt>
       
    </dl>
    
</div>
        <h3>Total Walk Time: </h3>
        <h4>@Model.TotalWalkTime minutes</h4>
   
<div>
     @Html.ActionLink("Edit", "Edit", new {  id = Model.Walker.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
